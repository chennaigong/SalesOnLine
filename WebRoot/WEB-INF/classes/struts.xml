<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
	<include file="struts-default.xml" />
	<include file="struts-admin.xml"></include>
	<constant name="struts.multipart.maxSize" value="1073741824000" />
	<constant name="struts.i18n.encoding" value="utf-8"></constant>

	<package name="default" extends="struts-default" namespace="/">

		<!-- 用户框架top -->
		<action name="mainTop" class="Action.BaseAction" method="index">
			<result name="success" type="freemarker">maintop.ftl</result>
		</action> 
		
		<!-- 用户框架left -->
		<action name="mainLeft" class="Action.BaseAction" method="index">
			<result name="success" type="freemarker">mainleft.ftl</result>
		</action> 
		
		<!-- 用户框架down -->
		<action name="mainDown" class="Action.BaseAction" method="index">
			<result name="success" type="freemarker">maindown.ftl</result>
		</action> 
		
		<!-- 用户框架main -->
		<action name="mainIndex" class="Action.BaseAction" method="index">
			<result name="success" type="freemarker">mainindex.ftl</result>
		</action> 
		
		<!-- 用户登录列表 -->
		<action name="loginIndex" class="Action.BaseAction" method="index">
			<result name="success" type="freemarker">loginindex.ftl</result>
		</action>

		<!-- ajax登录 -->
		<action name="doLogin" class="Action.LoginAction" method="doLogin">
			<result name="success">/AJAXTRAN/rsponseMsg.jsp</result>
		</action>
		
		<!-- 注销-->
		<action name="loginOut" class="Action.LoginAction" method="loginOut">
			<result name="success" type="redirect">loginIndex.action</result>
		</action> 

		<!-- 用户注册 -->
		<action name="registerIndex" class="Action.BaseAction" method="index">
			<result name="success" type="freemarker">registerindex.ftl</result>
		</action>
	
		<!-- ajax用户注册判断 -->
		<action name="doRegister" class="Action.UserAction" method="doRegister">
			<result name="success">/AJAXTRAN/rsponseMsg.jsp</result>
		</action>
		
		<!-- 交易订单列表 -->
		<action name="tradeIndex" class="Action.TradesAction" method="tradeIndex">
			<result name="success" type="freemarker">ustradeindex.ftl</result>
		</action> 
		
		<!-- 评价列表 -->
		<action name="rateIndex" class="Action.TradesAction" method="tradeIndex">
			<result name="success" type="freemarker">usrateindex.ftl</result>
		</action> 

	</package>
</struts>

