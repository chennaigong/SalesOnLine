<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
	<include file="struts-default.xml"/>
	<constant name="struts.multipart.maxSize" value="1073741824000"/> 
	<constant name="struts.i18n.encoding" value="utf-8"></constant>	
	<package name="admin" extends="struts-default" namespace="/admin">
		
		<!-- 后台框架top -->
		<action name="mainTop" class="Action.BaseAction" method="index">
			<result name="success" type="freemarker">/ADMIN/maintop.ftl</result>
		</action> 
		
		<!-- 后台框架left -->
		<action name="mainLeft" class="Action.BaseAction" method="index">
			<result name="success" type="freemarker">/ADMIN/mainleft.ftl</result>
		</action> 
		
		<!-- 后台框架down -->
		<action name="mainDown" class="Action.BaseAction" method="index">
			<result name="success" type="freemarker">/ADMIN/maindown.ftl</result>
		</action> 
		
		<!-- 后台框架main -->
		<action name="mainIndex" class="Action.ShopAction" method="addShop">
			<result name="success" type="freemarker">/ADMIN/mainindex.ftl</result>
		</action> 
		
		<!-- 交易订单列表 -->
		<action name="tradeIndex" class="Action.TradesAction" method="tradeIndex">
			<result name="success" type="freemarker">/ADMIN/adtradeindex.ftl</result>
		</action> 
		
		<!-- ajax获取交易订单列表 -->
		<action name="tradeList" class="Action.TradesAction" method="tradeList">
			<result name="success">/AJAXTRAN/rsponseMsg.jsp</result>
		</action>
		
		<!-- 评价列表 -->
		<action name="rateIndex" class="Action.BaseAction" method="index">
			<result name="success" type="freemarker">/ADMIN/adrateindex.ftl</result>
		</action>
		
		<!-- ajax获取评价列表 -->
		<action name="rateList" class="Action.RatesAction" method="rateList">
			<result name="success">/AJAXTRAN/rsponseMsg.jsp</result>
		</action> 
		
		<!-- 物流公司列表 -->
		<action name="logisticsIndex" class="Action.LogisticsAction" method="logisticsIndex">
			<result name="success" type="freemarker">/ADMIN/adlogisticsindex.ftl</result>
		</action> 
		
		<!-- ajax获取物流公司列表 -->
		<action name="logisticsList" class="Action.LogisticsAction" method="logisticsList">
			<result name="success">/AJAXTRAN/rsponseMsg.jsp</result>
		</action>
		
		<!-- 发货 -->
		<action name="logicsticsSend" class="Action.LogisticsAction" method="logicsticsSend">
			<result name="success" type="freemarker">/ADMIN/adlogisticssend.ftl</result>
		</action>
		
		<!-- 网站配置-->
		<action name="webconfigIndex" class="Action.BaseAction" method="index">
			<result name="success" type="freemarker">/ADMIN/adwebconfigindex.ftl</result>
		</action>
		
		<!-- ajax获取网站配置-->
		<action name="webconfigList" class="Action.WebconfigAction" method="webconfigList">
			<result name="success">/AJAXTRAN/rsponseMsg.jsp</result>
		</action>
		
		<!-- ajax更新网站配置-->
		<action name="updateWebconfig" class="Action.WebconfigAction" method="updateWebconfig">
			<result name="success">/AJAXTRAN/rsponseMsg.jsp</result>
		</action>
		
		<!-- 用户列表-->
		<action name="userIndex" class="Action.BaseAction" method="index">
			<result name="success">/ADMIN/aduserindex.ftl</result>
		</action>
		
		<!-- ajax获取用户列表-->
		<action name="userList" class="Action.UserAction" method="userList">
			<result name="success">/AJAXTRAN/rsponseMsg.jsp</result>
		</action>
		
		<!-- 注销-->
		<action name="loginOut" class="Action.LoginAction" method="loginOut">
			<result name="success" type="redirect">../loginIndex.action</result>
		</action>
		
		<!-- 店铺列表 -->
		<action name="shopIndex" class="Action.BaseAction" method="index">
			<result name="success" type="freemarker">/ADMIN/adshopindex.ftl</result>
		</action> 
		
		<!-- ajax获取店铺列表 -->
		<action name="shopList" class="Action.ShopAction" method="shopList">
			<result name="success">/AJAXTRAN/rsponseMsg.jsp</result>
		</action> 
		
		<!-- 全部评价列表 -->
		<action name="allRateIndex" class="Action.BaseAction" method="index">
			<result name="success" type="freemarker">/ADMIN/adallrateindex.ftl</result>
		</action>
		
		<!-- 全部订单列表 -->
		<action name="allTradeIndex" class="Action.BaseAction" method="index">
			<result name="success" type="freemarker">/ADMIN/adalltradeindex.ftl</result>
		</action>
		
		<!-- ajax全部评价列表 -->
		<action name="allRateList" class="Action.RatesAction" method="allRateList">
			<result name="success">/AJAXTRAN/rsponseMsg.jsp</result>
		</action>
		
		<!-- ajax全部订单列表 -->
		<action name="allTradeList" class="Action.TradesAction" method="allTradeList">
			<result name="success">/AJAXTRAN/rsponseMsg.jsp</result>
		</action>
		
		<!-- 根据状态获取全部订单列表 -->
		<action name="allTradeListStatus" class="Action.TradesAction" method="allTradeListStatus">
			<result name="success">/AJAXTRAN/rsponseMsg.jsp</result>
		</action>
		
		<!-- 修改订单为已读 -->
		<action name="modifyTradeRead" class="Action.TradesAction" method="modifyTradeRead">
			<result name="success">/AJAXTRAN/rsponseMsg.jsp</result>
		</action>
		
		<!-- 添加网店 -->
		<action name="addShop" class="Action.BaseAction" method="index">
			<result name="success" type="freemarker">/ADMIN/adaddshop.ftl</result>
		</action>
		
		<!-- 检查网店是否授权 -->
		<action name="examShop" class="Action.ShopAction" method="examShop">
			<result name="success">/AJAXTRAN/rsponseMsg.jsp</result>
		</action>
		
		<!-- 注销当前用户之后准备获取sessionKey -->
		<action name="acquireSession" class="Action.BaseAction" method="index">
			<result name="success" type="freemarker">/ADMIN/adacquiresession.ftl</result>
		</action>
		
		<!-- 注销之后跳转的页面 -->
		<action name="mainAcquireSession" class="Action.BaseAction" method="index">
			<result name="success" type="freemarker">/ADMIN/mainacquireSession.ftl</result>
		</action>
		
		<!-- 刷新店铺是否授权 -->
		<action name="refreshShop" class="Action.ShopAction" method="refreshShop">
			<result name="success">/AJAXTRAN/rsponseMsg.jsp</result>
		</action>
		
		<!-- 功能列表-->
		<action name="functionIndex" class="Action.BaseAction" method="index">
			<result name="success" type="freemarker">adfunctionindex.ftl</result>
		</action> 
		
		<!-- ajax功能列表-->
		<action name="functionList" class="Action.FunctionAction" method="functionList">
			<result name="success">/AJAXTRAN/rsponseMsg.jsp</result>
		</action> 
		
		<!-- 添加功能-->
		<action name="addFunction" class="Action.BaseAction" method="index">
			<result name="success" type="freemarker">adaddfunction.ftl</result>
		</action> 
		
		<!-- 添加功能-->
		<action name="doAddFunction" class="Action.FunctionAction" method="doAddFunction">
			<result name="success">/AJAXTRAN/rsponseMsg.jsp</result>
		</action> 
		
		<!-- 删除功能-->
		<action name="deleteFunction" class="Action.FunctionAction" method="deleteFunction">
			<result name="success">/AJAXTRAN/rsponseMsg.jsp</result>
		</action> 
		
		<!-- 修改功能-->
		<action name="modifyFunction" class="Action.FunctionAction" method="modifyFunction">
			<result name="success">/AJAXTRAN/rsponseMsg.jsp</result>
		</action> 
		
		<!-- 角色列表-->
		<action name="roleIndex" class="Action.BaseAction" method="index">
			<result name="success" type="freemarker">adroleindex.ftl</result>
		</action> 
		
		<!-- ajax角色列表-->
		<action name="roleList" class="Action.RoleAction" method="roleList">
			<result name="success">/AJAXTRAN/rsponseMsg.jsp</result>
		</action> 
		
		<!-- 添加角色列表-->
		<action name="addRole" class="Action.BaseAction" method="index">
			<result name="success" type="freemarker">adaddrole.ftl</result>
		</action> 
		
		<!-- ajax添加角色列表-->
		<action name="doAddRole" class="Action.RoleAction" method="doAddRole">
			<result name="success">/AJAXTRAN/rsponseMsg.jsp</result>
		</action> 
		
		<!-- 禁用角色列表-->
		<action name="disabledRole" class="Action.RoleAction" method="disabledRole">
			<result name="success">/AJAXTRAN/rsponseMsg.jsp</result>
		</action> 
		
		<!-- 禁启用角色列表-->
		<action name="enabledRole" class="Action.RoleAction" method="enabledRole">
			<result name="success">/AJAXTRAN/rsponseMsg.jsp</result>
		</action> 
		
		<!-- 修改角色具有的功能和名称-->
		<action name="modifyRole" class="Action.RoleAction" method="modifyRole">
			<result name="success">/AJAXTRAN/rsponseMsg.jsp</result>
		</action> 
		
		<!-- 添加用户店铺对应数据-->
		<action name="addShopUser" class="Action.UserAction" method="addShopUser">
			<result name="success">/AJAXTRAN/rsponseMsg.jsp</result>
		</action> 
		
		<!-- 删除用户店铺对应数据-->
		<action name="deleteShopUser" class="Action.UserAction" method="deleteShopUser">
			<result name="success">/AJAXTRAN/rsponseMsg.jsp</result>
		</action> 
		
	</package>
</struts>

